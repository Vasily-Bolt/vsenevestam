        img(src='https://mc.yandex.ru/watch/22147520' style='position:absolute; left:-9999px;' alt='')
    <!-- /Yandex.Metrika counter -->

    block head
      
  body
    .layout-wrapper
      header.layout-header
        block header
          .page-head
            +top-sign(topLogoAndInfo)
            +top-menu(breadcumbList)
      .layout-main-menu
        +showMainMenu(menuList)
      .layout-content
        block content
      footer.layout-foot
        block footer
          .address
            span= `Наш адрес: ${address.city}, ${address.streetHouse}, ${address.subway}`
